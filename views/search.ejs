<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YouTube Search</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

    <nav class="navbar navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="#">My YouTube App</a>
            <div class="d-flex">
                <span class="navbar-text me-3">
                    Hello, <%= typeof user !=='undefined' ? user.fullName : 'Guest' %>
                </span>
                <form action="/logout" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container">

        <div class="row justify-content-center mb-5">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <form action="/search" method="POST" class="d-flex">
                            <input class="form-control me-2" type="search" name="searchQuery"
                                placeholder="Search YouTube..." aria-label="Search" required
                                value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
                            <button class="btn btn-primary" type="submit">Search</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-12">
                <h4 class="border-bottom pb-2 mb-3 text-primary">Search Results</h4>
            </div>

            <% if (typeof videos !=='undefined' && videos.length> 0) { %>
                <% videos.forEach(function(video) { %>
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            <img src="<%= video.snippet.thumbnails.medium.url %>" class="card-img-top" alt="Thumbnail">
                            <div class="card-body d-flex flex-column">
                                <h6 class="card-title text-truncate">
                                    <%= video.snippet.title %>
                                </h6>
                                <p class="card-text text-muted small">
                                    <%= video.snippet.channelTitle %>
                                </p>

                                <form action="/favorites/add" method="POST" class="mt-auto">
                                    <input type="hidden" name="videoId" value="<%= video.id.videoId %>">
                                    <input type="hidden" name="title" value="<%= video.snippet.title %>">
                                    <input type="hidden" name="thumbnailUrl"
                                        value="<%= video.snippet.thumbnails.medium.url %>">
                                    <button type="submit" class="btn btn-success btn-sm w-100">Add to Favorites</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                        <% } else if (typeof searchQuery !=='undefined' && searchQuery) { %>
                            <div class="col-12 text-center text-muted">
                                <p>No videos found for "<%= searchQuery %>"</p>
                            </div>
                            <% } %>
        </div>

    </div>
    <div class="row mb-5">
        <div class="col-12">
            <h4 class="border-bottom pb-2 mb-3 text-success">My Saved Favorites</h4>
        </div>

        <% if (typeof favorites !=='undefined' && favorites.length> 0) { %>
            <% favorites.forEach(function(fav) { %>
                <div class="col-md-3 mb-4">
                    <div class="card h-100 shadow-sm bg-light border-success">
                        <img src="<%= fav.thumbnailUrl %>" class="card-img-top" alt="Thumbnail">
                        <div class="card-body">
                            <h6 class="card-title text-truncate small">
                                <%= fav.title %>
                            </h6>
                            <form action="/favorites/remove" method="POST" class="mt-2">
                                <input type="hidden" name="id" value="<%= fav.id %>">
                                <button type="submit" class="btn btn-outline-danger btn-sm w-100">Remove</button>
                            </form>
                        </div>
                    </div>
                </div>
                <% }); %>
                    <% } else { %>
                        <div class="col-12">
                            <p class="text-muted">You haven't saved any videos yet.</p>
                        </div>
                        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>